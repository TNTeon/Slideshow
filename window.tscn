script/source = "extends Window

var imageList = []
var imageNumber = 0

var dir = \"\"
var monitorNumber = 0

var displayRes = 0
var directory = 0

func _ready():
	dir = get_meta(\"dir\")
	monitorNumber = get_meta(\"monitorNumber\")
	
	self.get_window().current_screen = monitorNumber
	
	displayRes = DisplayServer.screen_get_size(monitorNumber)
	directory = DirAccess.get_files_at(dir)
	
	for i in directory:
		if \".png\" in i:
			imageList.append(i)
	
	$Sprite2D.position = Vector2(displayRes.x/2,displayRes.y/2)
	self.mode = 3
	
	$Timer.start()
	
func _process(delta):
	var image = Image.new()
	image.load(dir+\"/\"+imageList[imageNumber])
	
	var image_texture = ImageTexture.new()
	image_texture.set_image(image)
	
	$Sprite2D.texture = image_texture
		
	$Sprite2D.position = Vector2(displayRes.x/2,displayRes.y/2)
	$Sprite2D.scale = Vector2(float(displayRes.x)/float(image_texture.get_width()),float(displayRes.y)/float(image_texture.get_height()))
		
		
	await get_tree().create_timer(30.0).timeout
	imageNumber +=1"

